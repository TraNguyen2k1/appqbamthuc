<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityXemChiTietBaiDang">
<ImageView
    android:id="@+id/chitiet_hinhmonan"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/item_mon_an"
    />
    <TextView
        android:id="@+id/chitiet_tenbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_hinhmonan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Lẩu cù lao"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/chitiet_theloai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_tenbai"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:text="Lẩu miền Tây"
        android:textSize="17dp"
        />
    <ImageView
        android:id="@+id/chitiet_imgNguoi"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/black"
        android:background="@drawable/background_edittext"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_theloai"
        app:layout_constraintStart_toStartOf="@+id/chitiet_tenbai"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/chitiet_tennguoiviet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_theloai"
        app:layout_constraintStart_toEndOf="@+id/chitiet_imgNguoi"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:text="Chin Chin"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/mota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_tennguoiviet"
        app:layout_constraintStart_toStartOf="@+id/chitiet_imgNguoi"
        android:layout_marginTop="10dp"
        android:text="Mô tả: "
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/chitiet_mota"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_tennguoiviet"
        app:layout_constraintStart_toEndOf="@+id/mota"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="là món lẩu chân chất thơm ngon"
        android:textSize="20dp"

        />
    <TextView
        android:id="@+id/nguyenlieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_mota"
        app:layout_constraintStart_toStartOf="@+id/chitiet_imgNguoi"
        android:layout_marginTop="10dp"
        android:text="Nguyên liệu: "
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/chitiet_nguyenlieu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_mota"
        app:layout_constraintStart_toEndOf="@+id/nguyenlieu"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Cá 200g, Ớt 10 trái"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/cachlam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_nguyenlieu"
        app:layout_constraintStart_toStartOf="@+id/chitiet_imgNguoi"
        android:layout_marginTop="10dp"
        android:text="Cách làm: "
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/chitiet_cachlam"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_nguyenlieu"
        app:layout_constraintStart_toEndOf="@+id/cachlam"
        android:layout_marginTop="10dp"
        android:text="Đung sôi nước bỏ cá vào....."
        android:textSize="20dp"
        />
    <ImageView
        android:id="@+id/binhluan"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_cachlam"
        app:layout_constraintStart_toStartOf="@+id/chitiet_imgNguoi"
        android:layout_marginTop="20dp"
        android:src="@drawable/comment"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_cachlam"
        app:layout_constraintStart_toEndOf="@id/binhluan"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="Bình luận"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/chitiet_edit_binhluan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/binhluan"
        app:layout_constraintStart_toEndOf="@+id/binhluan"
        android:layout_marginTop="10dp"
        android:hint="Bình luận vào đây...."
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/chitiet_binhluan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_edit_binhluan"
        app:layout_constraintStart_toEndOf="@+id/binhluan"
        android:layout_marginTop="10dp"
        android:text="Ngon tuyệt"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btnhome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/home"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:id="@+id/btntimhome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tim"
            android:layout_marginStart="40dp"
            />
        <TextView
            android:id="@+id/btnThemBai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/add"
            android:layout_marginStart="40dp"
            />
        <TextView
            android:id="@+id/btntaikoan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/nguoidung"
            android:layout_marginStart="40dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>