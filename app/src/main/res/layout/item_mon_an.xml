<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_mon_an"
    android:layout_margin="10dp"
    >
<ImageView
    android:id="@+id/img_item_monan"
    android:layout_width="70dp"
    android:layout_height="90dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="20dp"
    android:src="#f1ad11"
    />
    <TextView
        android:id="@+id/tv_item_ten_monan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Tên bài viết"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_item_monan"
        />
    <TextView
        android:id="@+id/tv_item_diem_monan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="10 điểm"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_ten_monan"

        />
</androidx.constraintlayout.widget.ConstraintLayout>